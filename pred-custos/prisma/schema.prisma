generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum PredictionStatus {
  PENDING
  PROCESSING
  COMPLETED
  ERROR
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  name          String
  passwordHash  String // Renomeando para deixar claro que é o hash, não a senha
  role          Role           @default(USER)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  predictions   Prediction[]
  refreshTokens RefreshToken[] // Adicionando relação com RefreshToken
}

model RefreshToken {
  id        String    @id @default(cuid())
  token     String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  revokedAt DateTime?
  expiresAt DateTime

  @@index([userId])
}

model Prediction {
  id            String           @id @default(cuid())
  userId        String
  status        PredictionStatus @default(PENDING)
  // INPUTS
  currency      String           @default("EUR")
  volumeTon     Decimal          @db.Decimal(12, 4)
  leadTimeDays  Int?
  fuelIndex     Decimal?         @db.Decimal(12, 4)
  taxMultiplier Decimal?         @db.Decimal(12, 4)
  inputJson     Json
  // OUTPUTS
  costTotal     Decimal?         @db.Decimal(18, 4)
  euroPerKg     Decimal?         @db.Decimal(18, 6)
  outputJson    Json?
  modelUsed     String?
  modelVersion  String?
  artifactPath  String?
  errorMessage  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
